<?xml version="1.0"?>

<ruleset xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         name="best it - PHPMD"
         xmlns="http://pmd.sf.net/ruleset/1.0.0"
         xsi:schemaLocation="http://pmd.sf.net/ruleset/1.0.0 http://pmd.sf.net/ruleset_xml_schema.xsd"
         xsi:noNamespaceSchemaLocation="http://pmd.sf.net/ruleset_xml_schema.xsd">
    <description>PHPMD ruleset for best it PHP_CodeSniffer</description>

    <rule ref="rulesets/cleancode.xml/StaticAccess">
        <properties>
            <property
                name="exceptions"
                value="Closure, \PHP_CodeSniffer\Util\Common, \SlevomatCodingStandard\Helpers\FunctionHelper,
                    \SlevomatCodingStandard\Helpers\NamespaceHelper, \SlevomatCodingStandard\Helpers\PropertyHelper,
                    \SlevomatCodingStandard\Helpers\SuppressHelper, \SlevomatCodingStandard\Helpers\TokenHelper,
                    \SlevomatCodingStandard\Helpers\TypeHintHelper, \SlevomatCodingStandard\Helpers\UseStatementHelper"
            />
        </properties>
    </rule>

    <rule ref="rulesets/cleancode.xml">
        <exclude name="ElseExpression" />
        <exclude name="StaticAccess" />
        <!-- Disable opinionated things blocking us -->
        <exclude name="BooleanArgumentFlag" />
    </rule>

    <rule ref="rulesets/controversial.xml"/>

    <!-- There seemed to be a phpmd bug which complained about AbstractSniff without change or real existing error -->
    <rule ref="rulesets/design.xml/NumberOfChildren">
        <properties>
            <property name="minimum" value="16"/>
        </properties>
    </rule>

    <rule ref="rulesets/design.xml">
        <exclude name="NumberOfChildren" />
    </rule>

    <rule ref="rulesets/naming.xml"/>
    <rule ref="rulesets/unusedcode.xml"/>

    <exclude-pattern>Fixtures</exclude-pattern>
    <exclude-pattern>SniffTestCase</exclude-pattern>

    <!-- So many copies of the original code from the sniffer/slevomat. Ignore it! -->
    <exclude-pattern>AbstractFileDecorator.php</exclude-pattern>
</ruleset>
