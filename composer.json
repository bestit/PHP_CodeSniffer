{
    "name": "bestit/php_codesniffer",
    "description": "PHP_CodeSniffer ruleset and custom rules from best it.",
    "type": "library",
    "authors": [
        {
            "name": "Tim Kellner",
            "email": "tim.kellner@bestit-online.de"
        }
    ],
    "autoload": {
        "psr-4": {
          "BestIt\\": "src/Standards/BestIt"
        }
    },
    "autoload-dev": {
        "psr-4": {
          "Tests\\BestIt\\": "tests/Standards/BestIt"
        }
    },
    "prefer-stable": true,
    "require": {
        "slevomat/coding-standard": "^2.4",
        "squizlabs/php_codesniffer": "^2.0|^3.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^6.0",
        "phpmd/phpmd": "^2.6",
        "sebastian/phpcpd": "^3.0",
        "phploc/phploc": "^4.0"
    }
}
