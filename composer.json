{
    "name": "bestit/php_codesniffer",
    "description": "PHP_CodeSniffer ruleset and custom rules from best it.",
    "type": "library",
    "authors": [
        {
            "name": "Tim Kellner",
            "email": "tim.kellner@bestit-online.de"
        },
        {
            "name": "Nick Lubisch",
            "email": "nick.lubisch@bestit-online.de"
        }
    ],
    "autoload": {
        "psr-4": {
          "BestIt\\": "src/Standards/BestIt"
        }
    },
    "autoload-dev": {
        "files": [
            "vendor/squizlabs/php_codesniffer/autoload.php"
        ],
        "psr-4": {
          "BestIt\\": "tests/"
        }
    },
    "prefer-stable": true,
    "require": {
        "php": "^7.1",
        "slevomat/coding-standard": "^4.7.0",
        "squizlabs/php_codesniffer": "^3.3"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.6",
        "sebastian/phpcpd": "^3.0",
        "phploc/phploc": "^4.0",
        "phpunit/phpunit": "^5.5 || ^6.0",
        "phpcompatibility/php-compatibility": "^9.0",
        "dealerdirect/phpcodesniffer-composer-installer": "^0.4.4"
    }
}
