<?xml version="1.0"?>
<ruleset name="best it">
    <description>The best it coding standard.</description>

    <arg name="tab-width" value="4" />

    <rule ref="PSR1" />
    <rule ref="PSR2" />

    <rule ref="Generic.Arrays.DisallowLongArraySyntax" />
    <rule ref="Generic.Files.LineLength">
        <properties>
            <property name="lineLimit" value="120"/>
            <property name="absoluteLineLimit" value="120"/>
        </properties>
    </rule>
    <rule ref="Generic.Formatting.SpaceAfterCast" />

    <rule ref="Squiz.Strings.DoubleQuoteUsage.NotRequired" />

    <rule ref="BestIt">
        <exclude name="BestIt.Commenting.AbstractDocSniff.TagNotAllowed" />
        <exclude name="BestIt.Commenting.AbstractDocSniff.TagOccurrenceMin" />
        <exclude name="BestIt.Commenting.AbstractDocSniff.TagOccurrenceMax" />
        <exclude name="BestIt.Commenting.AbstractDocSniff.TagWrongPosition" />
        <exclude name="BestIt.Commenting.AbstractDocSniff.NoLineAfterTag" />
        <exclude name="BestIt.Commenting.AbstractDocSniff.MuchLinesAfterTag" />
        <exclude name="BestIt.Commenting.AbstractDocSniff.TagFormatContentInvalid" />
    </rule>

</ruleset>
